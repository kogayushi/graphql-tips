type Query {
    articles: [Article!]!
    comments(articleId: ID!): [Comment!]!
    users: [User!]!
}

type Article {
    id: ID!
    title: String!
    content: String!

    author: User!
    comments: [Comment!]!
    likedBy: [User!]!
}

type Comment {
    id: ID!
    content: String!
    author: User!
    article: Article!
}

type User {
    id: ID!
    name: String!
    articles: [Article!]!
    comments: [Comment!]!
}
