# articles.graphqls
extend type Query {
    articles: [Article!]!
}

extend type Mutation {
    postArticle(input: ArticleInput!): Article!
}

type Article {
    id: ID!
    title: String!
    content: String!
    author: User!
    comments: [Comment!]!
    likedBy: [User!]!
}

input ArticleInput {
    title: String!
    content: String!
}
